<%= simple_form_for(resource, html: {class: "form-signin"}, as: resource_name, url: session_path(resource_name)) do |f| %>
<h2 class="text-xs-center">Login</h2>
    <%= f.input :email, required: false, autofocus: true, label: false, placeholder: 'email', input_html: {class: 'form-control'} %>
    <%= f.input :password, required: false, label: false, placeholder: 'password', input_html: {class: 'form-control'} %>

    <%= f.button :submit, "Login", class: 'btn btn-primary btn-block' %>
<% end %>

<%= render "devise/shared/links" %>
